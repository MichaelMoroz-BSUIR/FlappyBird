<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" prefHeight="350.0" prefWidth="380.0" spacing="5.0" style="-fx-background-image: url('img/menu/background350_380.png');" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.Connector">
    <children>
        <Label text="Flappy Bird connect to Server" textFill="#e3c813">
            <font>
                <Font name="MKARCADECAPS" size="24.0" />
            </font>
        </Label>
        <Label text="IP Adress:" textFill="#e3c813">
            <font>
                <Font name="MKARCADECAPS" size="24.0" />
            </font>
        </Label>
        <TextField fx:id="ipTF" promptText="IP Adress">
            <font>
                <Font name="MKARCADECAPS" size="22.0" />
            </font>
        </TextField>
        <Label text="Port:" textFill="#e3c813">
            <font>
                <Font name="MKARCADECAPS" size="24.0" />
            </font>
        </Label>
        <TextField fx:id="portTF" promptText="Port">
            <font>
                <Font name="MKARCADECAPS" size="22.0" />
            </font>
        </TextField>
        <HBox spacing="5.0">
            <children>
                <Button fx:id="create" layoutX="92.0" layoutY="222.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" style="-fx-border-color: #E3C813; -fx-border-width: 5;" text="Create" textFill="#e3c813" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="MKARCADECAPS" size="24.0" />
                    </font>
                </Button>
                <Button fx:id="submit" layoutX="92.0" layoutY="222.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" style="-fx-border-color: #E3C813; -fx-border-width: 5;" text="Connect" textFill="#e3c813" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="MKARCADECAPS" size="24.0" />
                    </font>
                </Button>
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </HBox>
        <Label fx:id="state">
         <font>
            <Font name="MKARCADECAPS" size="22.0" />
         </font></Label>
    </children>
    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="50.0" />
    </padding>
</VBox>
